palavra_original = frase[random.randint(0, 30)]
palavra_tratada = unicodedata.normalize("NFD", palavra_original).encode("ascii","ignore").decode("utf-8").upper()
lacunas = []
chutes_errados = []
jogadas = 0


print('JOGO DA FORCA! Só pode errar 6!')


for i in range(len(palavra_tratada)):
    lacunas.insert(i, "_")

while jogadas <= 5:

    print('\n')
    print(f'LETRAS ERRADAS:', end=" ")
    for i in range(0, len(chutes_errados)):
        print(f'{chutes_errados[i]}', end=" ")
    print(F'   {6 - jogadas} Para FORCA!\n')

    for i in range(0, len(palavra_tratada)):
        print(f'{lacunas[i]}', end=" ")

    print('\n')
    chute = unicodedata.normalize("NFD", str(input("Arrisque uma letra: "))).encode("ascii", "ignore").decode("utf-8").upper()

    if chute in palavra_tratada:
        if chute in lacunas:
            print("Letra já chutada.")
        else:
            print("Boa!")
            for i in range(len(palavra_tratada)):
                if palavra_tratada[i] == chute:
                    lacunas[i] = chute
    elif chute in chutes_errados:
        print('\n')
        print("Já chutou essa, chute outra")
    else:
        chutes_errados.append(chute)
        jogadas += 1

    if "_" in lacunas:
        pass
    else:
        print(f"Parabéns! '{palavra_original.upper()}'!")
        jogadas = 10

if jogadas < 10:
    print('\n')
    print(f"FORCA! A palavra era '{palavra_original.upper()}'!")
    
# JOGO DA FORCA - FIM
